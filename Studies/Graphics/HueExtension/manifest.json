{
    "manifest_version": 2,
    "name": "Hue rotator",
    "version": "1.0.0",
    "description": "Hue rotate the web page",
    "permissions": [
        "tabs", "<all_urls>", "storage"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["background.js"]
        }
    ],
    "browser_action": {
        "default_title": "Hue rotator",
        "default_popup": "popup.html",
        "default_icon": {
            "32": "icon32.png"
        }
    },
    "icons": { "32": "icon32.png" },
    "background": {
        "scripts": ["background.js"]
    }
}