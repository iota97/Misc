{
    "manifest_version": 2,
    "name": "Improve reading",
    "version": "1.0.0",
    "description": "Bolds the first half of each word in a paragraph",
    "permissions": [
        "tabs", "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["popup.js"]
        }
    ],
    "browser_action": {
        "default_title": "Improve reading",
        "default_popup": "popup.html",
        "default_icon": {
            "32": "icon32.png"
        }
    },
    "icons": { "32": "icon32.png" }
}